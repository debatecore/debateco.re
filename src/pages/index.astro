---
import '@fontsource/lexend';
import Navigation from '../components/Navigation.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Debatecore – Approachable debating.">
		<title>{"debatecore – Home"}</title>
	</head>
	<body class="min-h-screen relative bg-black bg-gradient-to-b from-neutral-950 to-black text-white">
		<div class="absolute w-full h-screen bg-compsci motion-safe:animate-pan opacity-[.05] -z-10" />
		<div class="absolute w-full h-screen bg-gradient-to-b from-transparent to-black -z-10" />
		<Navigation />
		<section class="w-fit mx-auto p-4 flex flex-col justify-center items-center">
			<h1 class="mt-24 font-lexend font-semibold tracking-wide text-2xl sm:text-7xl text-transparent bg-clip-text bg-gradient-to-r from-violet-600 from-30% to-pink-400 to-70%">
				{"debatecore"}
			</h1>
			<p class="text-neutral-400 text-center text-pretty">
				{"Approachable debating. Coming soon."}
			</p>
			<p class="text-neutral-700 text-center">
				<a href="/">{"https://debateco.re"}</a>
			</p>
		</section>
		<section class="mt-[1000px] h-16 bg-black"></section>
	</body>
</html>
