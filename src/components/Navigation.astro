---
import homeicon from '../../public/home.svg?raw';
import scrolltexticon from '../../public/scroll-text.svg?raw';
const links = [
  {
    name: "Home",
    icon: homeicon,
    href: "/"
  },
  {
    name: "Blog",
    icon: scrolltexticon,
    href: "/"
  }
];
---

<nav id="navi" class="font-lexend fixed h-16 w-full flex flex-row bg-white bg-opacity-[.02] border-b border-neutral-800 backdrop-blur">
  <a href="/" class="mr-auto px-8 flex flex-row items-center hover:bg-black hover:bg-opacity-50">{"debatecore"}</a>
  {links.map(el => {
    return (
      <a href={el.href} class="px-8 flex flex-row items-center gap-2 hover:bg-black hover:bg-opacity-50">
        <span class="md:scale-[.75]"><Fragment set:html={el.icon} /></span>
        <span class="hidden md:block">{el.name}</span>
      </a>
    )
  })}
</nav>
